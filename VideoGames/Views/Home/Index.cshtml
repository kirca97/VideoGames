@using VideoGames.Models
@model List<VideoGames.Models.VideoGame>
@{
    ViewBag.Title = "Video Games";
}
@{ 
    List<VideoGame> Newest = Model.OrderByDescending(game => game.ReleasedYear).Take(5).ToList();
    List<VideoGame> MostPopular = Model.OrderByDescending(game => game.Rating).Take(5).ToList();
}

<body background="@Url.Content("~/Content/backgroundphoto.jpg")">
    <div class="jumbotron" style="opacity:0.8">
        <h2 class="text-primary text-center">Newest</h2>
        <div class="container" style="opacity:1">
            <div id="myCarousel" class="carousel slide" data-ride="carousel" style="width:1000px; height:320px">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                    <li data-target="#myCarousel" data-slide-to="3"></li>
                    <li data-target="#myCarousel" data-slide-to="4"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    @for (int i = 0; i < 5; i++)
                    {
                        if (i == 0)
                        {
                            <div class="active item">
                                <h2 class="text-center">
                                    <a href="@Url.Action("Details","VideoGames", new { id = Newest.ElementAt(i).Id })" style="font-family:Open Sans;color: #F25E3A">@Newest.ElementAt(i).Name</a>
                                </h2>
                                <img src="@Newest.ElementAt(i).Image" class="img-responsive" style="margin:auto; width:1000px; height:150px" />
                                @*<div class="row text-center" style="font-size: 30px; padding-top: 20px">
                                    <i class="glyphicon glyphicon-star"></i>
                                    @Html.DisplayFor(modelItem => @Newest.ElementAt(i).Rating)
                                    @Html.DisplayName(" / 10")
                                </div>*@
                                <div class="row text-center" style="font-size: 30px; padding-top: 20px">
                                    @Html.DisplayFor(modelItem => @Newest.ElementAt(i).ReleasedYear)
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="item">
                                <h2 class="text-center">
                                    <a href="@Url.Action("Details","VideoGames", new { id = Newest.ElementAt(i).Id })" style="color: #F25E3A;font-family:Open Sans">@Newest.ElementAt(i).Name</a>
                                </h2>
                                <img src="@Newest.ElementAt(i).Image" class="img-responsive" style="margin: auto; width:1000px; height:150px" />
                                @*<div class="row text-center" style="font-size: 30px; padding-top: 20px">
                                    <i class="glyphicon glyphicon-star"></i>
                                    @Html.DisplayFor(modelItem => @Newest.ElementAt(i).Rating)
                                    @Html.DisplayName(" / 10")
                                </div>*@
                                <div class="row text-center" style="font-size: 30px; padding-top: 20px">
                                    @Html.DisplayFor(modelItem => @Newest.ElementAt(i).ReleasedYear)
                                </div>
                            </div>
                        }
                    }
                </div>

                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <h2 class="text-primary text-center">The Most Popular</h2>
        <div class="container">
            <div id="myCarousel1" class="carousel slide" data-ride="carousel" style="width:1000px; height:320px">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel1" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel1" data-slide-to="1"></li>
                    <li data-target="#myCarousel1" data-slide-to="2"></li>
                    <li data-target="#myCarousel1" data-slide-to="3"></li>
                    <li data-target="#myCarousel1" data-slide-to="4"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    @for (int i = 0; i < 5; i++)
                    {
                        if (i == 0)
                        {
                            <div class="active item">
                                <h2 class="text-center">
                                    <a href="@Url.Action("Details","VideoGames", new { id = MostPopular.ElementAt(i).Id })" style="color: #F25E3A;font-family:Open Sans">@MostPopular.ElementAt(i).Name</a>
                                </h2>
                                <img src="@MostPopular.ElementAt(i).Image" class="img-responsive" style="margin: auto; width:1000px; height:150px" />
                                <div class="row text-center" style="font-size: 30px; padding-top: 20px">
                                    <i class="glyphicon glyphicon-star"></i>
                                    @Html.DisplayFor(modelItem => @MostPopular.ElementAt(i).Rating)
                                    @Html.DisplayName(" / 10")
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="item">
                                <h2 class="text-center">
                                    <a href="@Url.Action("Details","VideoGames", new { id = MostPopular.ElementAt(i).Id })" style="color: #F25E3A; font-family:Open Sans">@MostPopular.ElementAt(i).Name</a>
                                </h2>
                                <img src="@MostPopular.ElementAt(i).Image" class="img-responsive" style="margin: auto; width:1000px; height:150px" />
                                <div class="row text-center" style="font-size: 30px; padding-top: 20px">
                                    <i class="glyphicon glyphicon-star"></i>
                                    @Html.DisplayFor(modelItem => @MostPopular.ElementAt(i).Rating)
                                    @Html.DisplayName(" / 10")
                                </div>
                            </div>
                        }
                    }
                </div>

                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel1" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel1" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
</body>


